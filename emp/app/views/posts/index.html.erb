<h1>Listing posts</h1>

<table>
  <tr>
    <th>Emp name</th>
    <th>Emp age</th>
    <th>Emp department</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.emp_name %></td>
    <td><%= post.emp_age %></td>
    <td><%= post.emp_department %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

