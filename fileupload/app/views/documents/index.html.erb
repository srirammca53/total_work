<h1>Listing Files</h1>
<%#= link_to "home index", "home/index" %>
<table>
  <tr>
    <th>File</th>
    <th>Password</th>
    <th>Expiry date</th>
 
    
   
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td width="300px"><%= document.file %></td>
    <td width="300px"><%= document.password %></td>
    <td width="300px"><%= document.expiry_date %></td>
    <td width="300px"><%#= path %></td>
   
    <td width="300px"><%= link_to 'Show', document %></td>
    
    <td width="300px"><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

